footer
  background-color rgb(51, 51, 51)

.footer
  padding 100px 0 100px 0
  color white
  &__content
    display flex
    flex-wrap wrap
    justify-content space-around
    a
      color white
  &__contact
    width 250px
    display flex
    flex-direction column
  &__address
    margin 0 0 10px 0
  &__ttl
    margin 0 0 10px 0
    

.logo
  margin 20px 0 0 0
  font-size 30px
  font-weight 400
  font-family Poiret One, cursive
  color white
  &__strong
    font-weight 700
  &:hover
    color white
  &:active
    opacity 0.8