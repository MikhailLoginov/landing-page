footer
  background-color rgb(51, 51, 51)

.footer
  padding 47px 0 60px 0
  color white
  &__content
    display flex
    flex-wrap wrap
    justify-content space-between
    margin 0 34px 0 0
    a
      color white
      
  &__contact
    width 210px
    display flex
    flex-direction column
  &__address
    font-size 14px
    margin 0 0 22px 0
    line-height 20px
  &__ttl
    margin 0 0 10px 0
  &__phone
    font-size 14px
    margin-bottom 4px
  &__email
    font-size 14px
    

  .logo
    margin 35px 15px 0 8px
    font-size 30px
    font-weight 400
    font-family Poiret One, cursive
    color white
    &__strong
      font-weight 700
    &:hover
      color white
    &:active
      opacity 0.8