footer
  background-color #f7f7f7

.footer
  padding 116px 88px 20px 99px
  +below(768px)
    padding 116px 10px 20px 10px

.content
  display flex
  flex-wrap wrap
  justify-content space-between
  h3
    color #6c6c6c
    text-transform uppercase
  a
    text-transform uppercase
  p
    color #212121
    font-size 14px
    font-weight 300
    line-height 22px
    margin 14px 0 22px 0
  &__contacts
    padding-right 5px
    p
      max-width 225px
  &__info
    margin-right 15px
    margin-left 70px
    +below(1300px)
      margin-left 0
      margin-right 0
    +below(920px) 
      margin 40px 0 0 0
  &__links
    margin-top 17px
    display flex
    +below(500px)
      flex-wrap wrap
    a
      margin-bottom 8px
  &__col-1
    display flex
    flex-direction column
    width 184px
    margin-right 50px
  &__col-2
    display flex
    flex-direction column
    width 200px
    margin-right 50px
    +below(768px)
      margin-right 5px
  &__stay-in-touch
    +below(1300px)
      margin-top 50px
    p
      max-width 380px
  
.bot-panel
  margin 49px 10px 0 0
  display flex
  flex-wrap wrap
  justify-content space-between
  +below(1100px)
    flex-direction column
    min-height 100px
    align-items center
  letter-spacing 0.36px
  color #6c6c6c
  font-size 12px
  font-weight 700
  a
    letter-spacing 0.36px
    color #6c6c6c
    font-size 12px
    font-weight 700
    &:hover
      color #212121
    &:active
      color black
  &__links
    height 28px
    margin -7px 0 0 -20px
    a
      margin-right 1px
    a:first-child
      margin-right 3px