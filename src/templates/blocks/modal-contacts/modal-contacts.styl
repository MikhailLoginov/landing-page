.modal-contacts
  position fixed
  top 0
  right 0
  left 0
  bottom 0
  display none
  pointer-events none
  z-index 2
  width 800px
  margin 10% auto
  background rgba(0,0,0,0.97)
  transition opacity 400ms ease-in
  color white
  &:target
    display block
    pointer-events auto
  &__close
    position absolute
    right -15px
    top -15px
    text-decoration none
    color black
    font-weight 700