.testimonials
  margin 150px 0 100px 0
  text-align center
  h2
    margin 0 0 100px 0
  &__items
    display flex
    flex-wrap wrap
    justify-content space-around

.review
  width 45%
  &__text
    position relative
    border 2px solid #f2f2f2
    text-align left
    padding 25px
  &__border-block
    width 14px
    height 14px
    position absolute
    bottom -8px
    right 20px
    background-color white
    border-bottom 2px solid #f2f2f2
    border-right 2px solid #f2f2f2 
    transform rotate(45deg)
  &__personal
    display flex
    justify-content flex-end
    margin 20px 0 25px 0
  &__info
    display flex
    flex-direction column
    text-align right
  &__name
    font-weight 700
  &__photo
    background-color rgb(155, 154, 149)
    float right
    width 50px
    height 50px
    border-radius 50%
    margin 0 0 0 20px