.blog
  margin 120px 0 109px 0
  h2
    margin-bottom 19px
    text-align center
  &__items
    display flex
    justify-content space-between
    margin 0 3px
    flex-wrap wrap
    +below(1100px)
      justify-content space-around

.post
  width 330px
  margin-top 50px
  &__image
    width 100%
    height 205px
    background-color rgb(155, 154, 149)
  &__ttl
    margin 23px 40px 16px 15px
    line-height 25px
    +below(500px)
      margin 23px 0 16px 0
  &__calendar
    margin 0 0 0 5px
    width 14px
    height 14px
  &__info
    display flex
    margin 0 10px 0 10px
    +below(500px)
      margin 0
  &__date
    margin 0 30px 0 5px
    color #999999
    font-size 14px
  &__chat
    width 18px
    height 16px
    margin 2px 0 0 0
  &__comments
    color #999999
    font-size 14px
    margin 0 0 0 4px
  &__text
    margin 14px 13px 0 13px
    +below(500px)
      margin 14px 0 0 0
    color #444444
    line-height 24px
    font-size 16px