.features
  text-align center
  margin 120px 0 102px 0
  h2
    margin-bottom 93px
  &__items
    display flex
    justify-content space-between
    +below(1000px)
      justify-content space-around

.feature
  width 310px
  border 2px solid #f2f2f2
  text-align center
  display flex
  flex-direction column
  align-items center
  padding 0 10px
  &__circle
    width 64px
    height 64px
    border-radius 50%
    margin -25px 0 10px 0
    &.feature-1
      background #4ecb8c url("/assets/images/user.png") no-repeat center center
    &.feature-2
      background #4ecb8c url("/assets/images/flag.png") no-repeat center center
    &.feature-3
      background #4ecb8c url("/assets/images/brush.png") no-repeat center center
  h3
    margin 10px 0 0 0
  p
    margin 14px 0 50px 0
    line-height 24px