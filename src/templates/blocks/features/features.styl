.features
  text-align center
  margin 150px 0 100px 0
  h2
    margin-bottom 100px
  &__items
    display flex
    justify-content space-around

.feature
  width 330px
  border 2px solid #f2f2f2
  text-align center
  display flex
  flex-direction column
  align-items center
  padding 0 10px 0 10px
  &__circle
    width 50px
    height 50px
    border-radius 50%
    margin -25px 0 10px 0
    &.feature-1
      background #4ecb8c url("/assets/images/user.png") no-repeat center center
    &.feature-2
      background #4ecb8c url("/assets/images/flag.png") no-repeat center center
    &.feature-3
      background #4ecb8c url("/assets/images/brush.png") no-repeat center center
  h3
    margin 10px 0 0 0
  p
    margin 10px 0 50px 0